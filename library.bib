journal = {Remote Sensing of Environment},
keywords = {Europe,MODIS,Urban heat island},
number = {12},
pages = {3175--3186},
publisher = {Elsevier Inc.},
title = {{Exploring indicators for quantifying surface urban heat islands of European cities with MODIS land surface temperatures}},
url = {http://dx.doi.org/10.1016/j.rse.2011.07.003},
volume = {115},
year = {2011}
