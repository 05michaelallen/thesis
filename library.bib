isbn = {0169-2046},
issn = {01692046},
journal = {Landscape and Urban Planning},
keywords = {Bioclimatic urban design,Children's health,Geographic scale,Playgrounds,Surface temperature,Urban climate},
pages = {29--42},
publisher = {Elsevier B.V.},
title = {{Hot playgrounds and children's health: A multiscale analysis of surface temperatures in Arizona, USA}},
