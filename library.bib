isbn = {978-0-465-00300-6},
issn = {0591-2385},
journal = {Zygon{\^{A}}{\textregistered}},
number = {4},
pages = {903--914},
title = {{Beyond Reductionism: Reinventing the Sacred}},
url = {http://www.blackwell-synergy.com/doi/abs/10.1111/j.1467-9744.2007.00879.x},
volume = {42},
