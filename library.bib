issn = {08998418},
journal = {International Journal of Climatology},
keywords = {Albedo,Anthropogenic heat flux,Eddy covariance,Energy budget,Montreal,Snow,Urban climate,Wintertime},
number = {1},
pages = {137--152},
title = {{Wintertime radiation and energy budget along an urbanization gradient in Montreal, Canada}},
